{% set app_name = app_name is defined ? app_name : 'Checkers Elite' %}
<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}
				{{ app_name }}
			{% endblock %}
		</title>

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="{{ asset('nova/css/nova.css') }}"> {% block styles %}{% endblock %}
		</head>
		<body class="layout">
			<header class="header">
				<div class="container nav">
					<a class="brand" href="{{ path('app_accueil') }}">
						<div class="brand-badge">C</div>
						<span class="brand-name">{{ app_name }}</span>
					</a>

					<a href="{{ path('app_article_index') }}">Actualités</a>
					<a href="{{ path('app_produit_index') }}">Boutique</a>
					<a href="{{ path('app_regle') }}">Règles</a>

					{% if not is_granted('IS_AUTHENTICATED_FULLY') %}
						<a href="{{ path('app_login') }}">Se connecter</a>
					{% else %}
						<a href="{{ path('app_profil') }}">Mon profil</a>
						<a href="{{ path('_logout_main') }}">Se déconnecter</a>

						{% if is_granted('ROLE_ADMIN') %}
							<a href="{{ path('app_administrateur') }}">Administration</a>
						{% endif %}
					{% endif %}

					<a class="cart-link" href="{{ path('panier_index') }}">
						<img src="{{ asset('nova/img/panier.svg') }}" alt="Panier" class="cart-icon">
					</a>


					<a class="btn" href="{{ path('app_regle') }}">Jouer maintenant</a>
				</div>
			</header>

			<main class="main container"> {% block body %}{% endblock %}
				</main>

				<footer class="footer">
					<div class="container">
						<p>©
							{{ "now"|date("Y") }}
							{{ app_name }}
							— Tous droits réservés.</p>
						<div class="links">
							<a href="{{ path('app_assistance') }}">Contact</a>
							<a href="#">Confidentialité</a>
						</div>
					</div>
				</footer>

				<script src="{{ asset('nova/js/nova.js') }}"></script>
				{% block scripts %}{% endblock %}
			</body>
		</html>
