{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
<style>
    .container {
        max-width: 400px;
        margin: 0 auto;
        padding: 30px;
        background-color: #FFFFFF;
        border-radius: 8px;
    }

    h1 {
        text-align: center;
    }

    form {
        margin-top: 20px;
    }

    label {
        display: block;
        margin-bottom: 5px;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .connexion {
        width: 100%;
        padding: 10px;
        background-color: #BBBBBB;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .connexion:hover {
        color: #FFFFFF;
    }

    p {
        margin-top: 10px;
        text-align: center;
    }
    .lien {
        text-decoration: none; 
        color: inherit;
    }
    .lien:hover {
        text-decoration: none; 
        font-weight: bold;
    }
    
</style>
{% endblock %}

{% block body %}
<div class="container">
    <h1>Connexion</h1>

    <form   action="{{ path('app_login') }}" method="post">
        <div>
            <label for="mail">Email</label>
            <input type="text" name="_email" value="{{ lastUserMail }}"  required>
        </div>
        <div>
            <label for="password">Mot de passe</label>
            <input type="password" name="_password" required>
        </div>
        <div>
            <button class="connexion" type="submit">Se connecter</button>
        </div>
        <input type="hidden" name="_target_path" value='/'>
        
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    </form>

    <p>Pas encore inscrit ? S'inscrire <a class="lien" href="{{ path('app_inscription') }}">ici</a>.</p> 
</div>
{% endblock %}
