{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe
{% endblock %}

{% block body %}
	<div class="container reset-password">
		{% for flash_error in app.flashes('reset_password_error') %}
			<div class="alert" role="alert">{{ flash_error }}</div>
		{% endfor %}
		<h1>Réinitialiser votre mot de passe</h1>

		{{ form_start(requestForm) }}
		<div class="form-group">
			{{ form_row(requestForm.email) }}
			<small>Entrez votre adresse e-mail, et nous vous enverrons un lien pour réinitialiser votre mot de passe.</small>
		</div>

		<button class="btn btn-primary">Envoyer l'e-mail de réinitialisation</button>
		{{ form_end(requestForm) }}
	</div>
{% endblock %}
