{% extends 'base.html.twig' %}

{% block title %}Formulaire de Contact
{% endblock %}

{% block stylesheets %}
	<style>
		.container {
			max-width: 600px;
			margin: 50px auto;
			padding: 20px;
			background-color: #f9f9f9;
			border-radius: 8px;
			box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
			text-align: center;
		}

		h1 {
			margin-bottom: 30px;
		}

		form {
			display: flex;
			flex-direction: column;
			align-items: center;
		}

		label {
			font-weight: bold;
			margin-bottom: 10px;
			width: 100%;
			text-align: left;
		}

		input[type="text"],
		textarea {
			width: 100%;
			padding: 12px;
			margin-bottom: 20px;
			border: 1px solid #ccc;
			border-radius: 6px;
			font-size: 16px;
			box-sizing: border-box;
			resize: none;
		}

		textarea {
			height: 150px;
		}

		button[type="submit"] {
			padding: 12px 24px;
			background-color: #BBBBBB;
			border: none;
			border-radius: 6px;
			cursor: pointer;
			transition: background-color 0.3s ease;
			font-size: 16px;
			width: 150px;
		}

		button[type="submit"]:hover {
			color: white
		}
	</style>
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Formulaire de Contact</h1>

		{{ form_start(formulaire) }}
		{{ form_row(formulaire.Email) }}
		{{ form_errors(formulaire.Email) }}
		{{ form_row(formulaire.Message) }}
		{{ form_errors(formulaire.Message) }}
		{{ form_row(formulaire.Envoyer) }}
		{{ form_errors(formulaire) }}
		{{ form_end(formulaire) }}
	</div>
{% endblock %}
