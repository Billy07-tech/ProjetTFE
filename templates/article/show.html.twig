{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<style>
.article-card {
    max-width: 800px;
    margin: 50px auto;
    background: #fff;
    border-radius: 10px;
    padding: 20px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.article-card h2 {
    margin-bottom: 15px;
    color: #0d6efd;
}

.article-meta {
    font-size: 0.9em;
    color: #666;
    margin-bottom: 15px;
}

.article-content {
    line-height: 1.6;
    font-size: 1.05em;
    margin-bottom: 20px;
}

.actions {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
}

.btn {
    display: inline-block;
    padding: 8px 14px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: bold;
    transition: background 0.2s ease;
}

.btn-back {
    background: #6c757d;
    color: #fff;
}
.btn-back:hover {
    background: #565e64;
}

.btn-edit {
    background: #0d6efd;
    color: #fff;
}
.btn-edit:hover {
    background: #0a58ca;
}

.btn-delete button {
    background: #dc3545;
    color: #fff;
    border: none;
    padding: 8px 14px;
    border-radius: 6px;
    cursor: pointer;
    font-weight: bold;
    transition: background 0.2s ease;
}
.btn-delete button:hover {
    background: #bb2d3b;
}
</style>

<div class="article-card">
    <h2>{{ article.titre }}</h2>
    <div class="article-meta">
        ‚úçÔ∏è Auteur : {{ article.auteur.pseudo }} | üóìÔ∏è {{ article.date ? article.date|date('d/m/Y H:i') : 'Non d√©fini' }}
    </div>
    <div class="article-content">
        {{ article.contenu }}
    </div>

    <div class="actions">
        <a href="{{ path('app_article_index') }}" class="btn btn-back">‚¨Ö Retour</a>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-edit">‚úèÔ∏è Modifier</a>
            <span class="btn-delete">{{ include('article/_delete_form.html.twig') }}</span>
        {% endif %}
    </div>
</div>
{% endblock %}
