{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
<style>
    .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 30px;
        background-color: #FFFFFF;
        border-radius: 8px;
    }

    h1 {
        text-align: center;
    }

    form {
        margin-top: 20px;
    }

    .group {
        display: flex;
        flex-direction: column;
        margin-bottom: 15px;
    }

    .group label {
        margin-bottom: 5px;
    }

    .group input {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 15px;
    }

    .submit {
        width: 100%;
        padding: 10px;
        background-color: #BBBBBB;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .submit:hover {
        color: #FFFFFF;
    }

    p {
        margin-top: 10px;
        text-align: center;
        
    }
    .link {
        text-decoration: none; 
        color: inherit;
    }
    .link:hover {
        text-decoration: none; 
        font-weight: bold;
    }
</style>
{% endblock %}

{% block body %}
<div class="container">
    <h1>Inscription</h1>

    <form action="{{ path('app_inscription') }}" method="post">
        <div class="row">
            <div class="group" style="flex: 1;">
                <label for="firstName">Prénom</label>
                <input type="text" name="firstName" required>
            </div>
            <div class="group" style="flex: 1; margin-left: 10px;">
                <label for="lastName">Nom</label>
                <input type="text" name="lastName" required>
            </div>
        </div>
        <div class="row">
            <div class="group" style="flex: 1;">
                <label for="pseudo">Pseudo</label>
                <input type="text" name="pseudo" required>
            </div>
            <div class="group" style="flex: 1; margin-left: 10px;">
                <label for="email">Email</label>
                <input type="text" name="email" required>
            </div>
        </div>
        <div class="row">
            <div class="group" style="flex: 1;">
                <label for="password">Mot de passe</label>
                <input type="password" name="password" required>
            </div>
            <div class="group" style="flex: 1; margin-left: 10px;">
                <label for="passwordConfirm">Confirmation du mot de passe</label>
                <input type="password" name="passwordConfirm" required>
            </div>
        </div>
        <div>
            <button class="submit" type="submit">S'inscrire</button>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    </form>

    <p>Déjà inscrit ? Se connecter <a class="link" href="{{ path('app_login') }}">ici</a>.</p>
</div>
{% endblock %}
